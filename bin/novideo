#!/usr/bin/env bash

# https://stackoverflow.com/questions/9913032/how-can-i-extract-audio-from-video-with-ffmpeg

remove_video() {
  if [ ! -f "$1" ]; then
    echo "Not a file: '$1'" >&2
    return 1
  fi

  input="$1"

  dir="$(dirname "$input")"
  base="${input##*/}"
  name="${base%\.*}"
  ext="${input##*\.}"

  output="$dir"/"$name"_novideo."$ext"

  ffmpeg -n -i "$input" -vn -ac 2 "$output"
}

for file; do remove_video "$file"; done
