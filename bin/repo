#!/usr/bin/env bash

open_repo() {
  current="$PWD"
  target="$1"

  if [ ! -d "$target" ]; then
    echo "Not a directory: '$target'" >&2
    return 1
  fi

  cd "$target"
 
  in_git_repo="$(git rev-parse --is-inside-work-tree 2>/dev/null)"

  if [ "$in_git_repo" ]; then
    url="$(git config --get remote.origin.url)"
    echo "Opening '$url'..."
    open "$url"
  else
    if [ "$target" == '.' ]; then
      target="$current"
    fi
    echo "Not a git repository: '$target'" >&2
  fi

  cd "$current"
}

if [ -z "$1" ]; then
  set -- '.'
fi

for path; do open_repo "$path"; done
